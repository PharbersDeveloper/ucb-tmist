{{#bp-layout local-class="page-mission"}}
	{{#bp-layout wrap=true multi="start" local-class="mission-list" classNames="p-4"}}
		{{#each model.useableProposals as |useableProposal uindex|}}
			{{#each model.papers as |paper pindex|}}
				{{#if (bp-eq uindex pindex)}}
					{{mission-info
							local-class=(if (bp-eq model.detailPaper.id paper.id) 'choosed')
							useableProposal=useableProposal
							useableProposalPaper=paper
							onClick=(action 'changeDetail' useableProposal paper)}}
				{{/if}}
			{{/each}}
		{{else}}
			<p>暂无任务</p>
		{{/each}}
	{{/bp-layout}}
	{{#if (bp-eq model.useableProposals.length 0)}}
		{{#bp-layout direction="col" local-class="mission-desc" classNames="p-4"}}
			暂无任务
		{{/bp-layout}}
	{{else}}
		{{#bp-layout direction="col" local-class="mission-desc" classNames="p-4"}}
			{{!-- {{mission-state model.detailPaper.state classNames="mb-4"}} --}}
			{{#bp-layout main="between" cross="center"  classNames="mb-4"}}
				{{mission-state model.detailPaper.state}}
				{{show-endtime model.detailPaper}}
			{{/bp-layout}}
			<h3 class="mt-3 mb-1">
				{{model.detailProposal.proposal.name}}
			</h3>
			{{#if (bp-not-eq model.detailProposal.proposal.totalPhase 1)}}
				<p local-class="phase" class="mb-4">
					{{!-- <span>关卡1*</span> --}}
					<span>共{{model.detailProposal.proposal.totalPhase}}周期</span>
				</p>
			{{/if}}
			<p local-class="desc" class="mb-4">
				{{model.detailProposal.proposal.describe }}
			</p>
			{{#bp-layout main="end" local-class="start" classNames="mb-4"}}
				{{#if (bp-eq model.detailPaper.state 1)}}
					{{#bp-button tagName='span' classNames="mr-1" onClick=(action (mut reDeploy) true)}}
						重新部署
					{{/bp-button}}
					{{#bp-button type="primary" tagName='span' onClick=(action 'startDeploy' model.detailProposal.proposal.id)}}
						继续部署
					{{/bp-button}}
				{{else}}
					{{#bp-button type="primary" tagName='span' 
					onClick=(action 'startDeploy' model.detailProposal.proposal.id)}}
						开始部署
					{{/bp-button}}
				{{/if}}
			{{/bp-layout}}
			<div class="dropdown-divider mt-3 mb-4"></div>
			{{#bp-layout tagName="h4" main="between" classNames="m-0"}}
				<span local-class="title">历史评测报告</span>
				{{#if (bp-gt model.detailPaper.assessmentReports.length 0)}}
					<span local-class="times">共完成{{model.detailPaper.assessmentReports.length}}次</span>
				{{/if}}
			{{/bp-layout}}
			{{#each model.detailPaper.assessmentReports as |assessmentReport index|}}
				{{#bp-layout tagName="p" main="between" cross="center" 
				local-class="historp-report" classNames="px-2 py-3 m-0"
				classNames=(if (bp-eq index 0) "mt-4 mb-0 px-2 py-3" "m-0 px-2 py-3")}}
					{{#bp-layout tagName="span" local-class="infos"}}
						<span class="mr-3">{{bp-increment-property index}}</span>
						<span class="mr-4"> <span local-class="level" class="mr-1">S</span>级*</span>
						<span>{{bp-string-slice assessmentReport.time 0}}</span>
					{{/bp-layout}}
					{{!-- {{#bp-button type="linkTo" tagName='span' 
						onClick=(action 'checkReport' assessmentReport)}}
						查看
					{{/bp-button}} --}}
					{{#link-to "page-report" assessmentReport}}
						查看
					{{/link-to}}
				{{/bp-layout}}
			{{else}}
				<p class="mt-2">还没有完成过该任务</p>
				{{!-- {{#if testBtn}}
					<p>{{#link-to "page-report"}}
							还没有完成过该任务
						{{/link-to}}
					</p>
				{{/if}} --}}
			{{/each}}
		{{/bp-layout}}
	{{/if}}
{{/bp-layout}}
{{#bp-modal
		open=notice 
		position='center'
		onSubmit=(action "submit") 
		onHidden=(action (mut notice) false) as |modal|}}
	{{#modal.header closeButton=false classNames="p-4"}}
		欢迎进入铁马区域管理模拟平台
	{{/modal.header}}
	{{#modal.body classNames="px-4 pt-0"}}
		{{detail}}
	{{/modal.body}}
	{{!-- {{#modal.footer tagName="div"}} --}}
	{{#bp-layout main="between" classNames="px-4"}}
		<p>
			{{#choose-group type="checkbox" onChange=(action 'chooseItem') as |choose|}}
				{{#each neverShow as |radio|}}
					{{choose.item radio=radio}}
				{{/each}}
			{{/choose-group}}
		</p>
		<p>
			{{#bp-button type="link" onClick=(action modal.close)}}跳过{{/bp-button}}
			{{#if (bp-eq step 3)}}
				{{#bp-button onClick=(action 'prevStep')}}上一步{{/bp-button}}
				{{#bp-button type="primary" onClick=(action modal.close)}}开始{{/bp-button}}
			{{else if (bp-eq step 2)}}
				{{#bp-button onClick=(action 'prevStep')}}上一步{{/bp-button}}
				{{#bp-button type="primary" onClick=(action modal.submit)}}下一步({{step}}/3){{/bp-button}}
			{{else}}
				{{#bp-button type="primary" onClick=(action modal.submit)}}下一步({{step}}/3){{/bp-button}}
			{{/if}}
		</p>
	{{/bp-layout}}
	{{!-- {{/modal.footer}} --}}
{{/bp-modal}}
{{#bp-modal
		open=reDeploy 
		position='center'
		onHidden=(action (mut reDeploy) false) as |modal|}}
	{{#modal.header closeButton=false}}
		<h4 class="modal-title">
			重新部署
		</h4>
	{{/modal.header}}
	{{#modal.body}}
		重新开始将清空您上次尚未完成的决策记录，是否继续？
	{{/modal.body}}
	{{#modal.footer}}
		{{#bp-button type="link" onClick=(action modal.close)}}取消{{/bp-button}}
		{{#bp-button type="primary" onClick=(action 'reDeploy')}}重新部署{{/bp-button}}
	{{/modal.footer}}
{{/bp-modal}}