{{!--{{#bp-layout local-class="page-mission"}}
	{{!-- {{#bp-layout direction='col' local-class="mission-detail" classNames="p-4"}}
		{{#bp-page-header local-class='header' classNames='mb-4' as |ph|}}
			{{#ph.body as |body|}}
				{{#body.left local-class='left-body' classNames='pb-4' as |left|}}
