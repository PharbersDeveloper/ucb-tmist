									{{#bp-layout direction="col" local-class="main-box"}}
										{{#bp-layout main="between" classNames="mb-2"}}
											<h4 class="m-0">{{gc.productConfig.product.name}}</h4>
											<span local-class="schedule">
												{{gc.productConfig.priceType}}{{goodsSalesTarget.salesTarget}}/{{gc.productConfig.priceType}}{{format-number model.resourceConfigManager.managerConfig.totalBusinessIndicators}}
