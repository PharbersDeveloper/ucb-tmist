										{{/bp-layout}}
										{{#bp-progress as |p|}}
											{{p.bar value=goodsSalesTarget.salesTarget maxValue=model.resourceConfigManager.managerConfig.totalBusinessIndicators}}
										{{/bp-progress}}
									{{/bp-layout}}
									<div local-class="blank"></div>
									{{#if (bp-eq goodsSalesTarget.salesTarget model.resourceConfigRepresentatives.length)}}
										{{bp-icon size='large' icon='check' local-class="icon icon-right"}}
									{{/if}}
