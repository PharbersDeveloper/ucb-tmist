{{#light-table table 
	height='570px'
	local-class='table'
	classNames='px-4'
	as |t|}}
	{{t.head
		onColumnClick=(action 'onColumnClick')
		iconSortable='sort-default'
	    iconAscending='sort-asc'
	  	iconDescending='sort-des'
		iconComponent='table-icon'
		local-class='thead'
		fixed=true
  }}
	{{#t.body
    canSelect=false
    onScrolledToBottom=(action 'onScrolledToBottom')
	local-class='tbody'
    as |body|
  }}
	{{/t.body}}
{{/light-table}}