{{#bp-layout local-class="historical-sales-container"}}
	{{#bp-layout tagName="ul" direction="col" local-class="nav" 
				classNames="mr-4 p-4 bg-white"}}
		{{#bp-layout tagName="li" cross="center" 
					local-class=(if (bp-eq salesGroupValue 0) "active")
					classNames="px-4"}}
			<span {{action 'changeSalesValue' 0}}>产品销售报告</span>
		{{/bp-layout}}
		{{#bp-layout tagName="li" cross="center" 
					local-class=(if (bp-eq salesGroupValue 1) "active")
					classNames="px-4"}}
			<span {{action 'changeSalesValue' 1}}>地区销售报告</span>
		{{/bp-layout}}
		{{#bp-layout tagName="li" cross="center" 
					local-class=(if (bp-eq salesGroupValue 2) "active")
					classNames="px-4"}}
			<span {{action 'changeSalesValue' 2}}>代表销售报告</span>
		{{/bp-layout}}
		{{#bp-layout tagName="li" cross="center" 
					local-class=(if (bp-eq salesGroupValue 3) "active")
					classNames="px-4"}}
			<span {{action 'changeSalesValue' 3}}>医院销售报告</span>
		{{/bp-layout}}
	{{/bp-layout}}
	{{#bp-layout local-class="content"}}
		<div local-class="report product">
			{{#bp-layout tagName="h2" cross="center" local-class="title"
				 classNames="m-0 bg-white px-4"}}
				{{#each pageContent as |item index|}}
					{{#if (bp-eq index salesGroupValue)}}
						{{item}}销售结构分布图
					{{/if}}
				{{/each}}
			{{/bp-layout}}
			<div local-class="product-sales chart" class="mb-4 px-4 py-3 bg-white">
				{{bp-circle-double
						eid="circleProd"
						circleSize=circlePie
						circleData=doubleCircleData}}
			</div>
			{{#bp-layout tagName="h2" cross="center" 
					local-class="title"
					classNames="m-0 bg-white px-4"}}
				{{#each pageContent as |item index|}}
					{{#if (bp-eq index salesGroupValue)}}
						{{item}}销售趋势图
					{{/if}}
				{{/each}}
			{{/bp-layout}}
			{{#bp-layout main="between" 
						local-class="choose-container"
						classNames="bg-white"}}
				{{#if (bp-eq salesGroupValue 1)}}
					{{#bp-layout main="between" cross="center"
							local-class="choose-area" 
							classNames="px-4"}}
						<span local-class="keys" class="mr-4">
							城市
						</span>
						{{#bp-dropdown widthSize="auto"
								local-class="dd-medicines dd-area" as |dd|}}
							{{#dd.button}}
								{{#if regionChooseCity.id}}
									<p>{{regionChooseCity.name}}</p>
								{{else}}
									全部选择
								{{/if}}
								{{bp-icon icon='down'}}
							{{/dd.button}}
							{{#dd.menu as |menu|}}
								{{#menu.option value=''
									onClick=(action (mut regionChooseCity))}}
									全部选择
								{{/menu.option}}
								{{#each model.cities as |city|}}
									{{#menu.option value=city
												onClick=(action (mut regionChooseCity))}}
										{{city.name}}
									{{/menu.option}}
								{{/each}}
							{{/dd.menu}}
						{{/bp-dropdown}}
					{{/bp-layout}}
				{{else if (bp-eq salesGroupValue 2)}}
					{{#bp-layout main="between" cross="center"
							local-class="choose-area" 
							classNames="px-4"}}
						<span local-class="keys" class="mr-4">
							代表
						</span>
						{{#bp-dropdown widthSize="auto"
								local-class="dd-medicines dd-area" as |dd|}}
							{{#dd.button}}
								{{#if repChooseRep.id}}
									<p>{{repChooseRep.representativeConfig.representative.name}}</p>
								{{else}}
									全部选择
								{{/if}}
								{{bp-icon icon='down'}}
							{{/dd.button}}
							{{#dd.menu as |menu|}}
								{{#menu.option value=''
									onClick=(action (mut repChooseRep))}}
									全部选择
								{{/menu.option}}
								{{#each model.resourceConfigRepresentatives as |resourceConfig|}}
									{{#menu.option value=resourceConfig
												onClick=(action (mut repChooseRep))}}
										{{resourceConfig.representativeConfig.representative.name}}
									{{/menu.option}}
								{{/each}}
							{{/dd.menu}}
						{{/bp-dropdown}}
					{{/bp-layout}}
					{{#bp-layout main="between" cross="center"
							local-class="choose-area" 
							classNames="px-4"}}
						<span local-class="keys" class="mr-4">
							产品
						</span>
						{{#bp-dropdown widthSize="auto"
								local-class="dd-medicines dd-area" as |dd|}}
							{{#dd.button}}
								{{#if repChooseGoods.id}}
									<p>{{repChooseGoods.productConfig.product.name}}</p>
								{{else}}
									全部选择
								{{/if}}
								{{bp-icon icon='down'}}
							{{/dd.button}}
							{{#dd.menu as |menu|}}
								{{#menu.option value=''
									onClick=(action (mut repChooseGoods))}}
									全部选择
								{{/menu.option}}
								{{#each model.selfGoodsConfigs as |goodsConfig|}}
									{{#menu.option value=goodsConfig
												onClick=(action (mut repChooseGoods))}}
										{{goodsConfig.productConfig.product.name}}
									{{/menu.option}}
								{{/each}}
							{{/dd.menu}}
						{{/bp-dropdown}}
					{{/bp-layout}}
				{{else if (bp-eq salesGroupValue 3)}}
					{{#bp-layout main="between" cross="center"
							local-class="choose-area" 
							classNames="px-4"}}
						<span local-class="keys" class="mr-4">
							选择医院
						</span>
						{{#bp-dropdown widthSize="auto"
								local-class="dd-medicines dd-area" as |dd|}}
							{{#dd.button}}
								{{#if hospChooseHosp.id}}
									<p>{{hospChooseHosp.hospitalConfig.hospital.name}}</p>
								{{else}}
									全部选择
								{{/if}}
								{{bp-icon icon='down'}}
							{{/dd.button}}
							{{#dd.menu as |menu|}}
								{{#menu.option value=''
									onClick=(action (mut hospChooseHosp))}}
									全部选择
								{{/menu.option}}
								{{#each model.destConfigHospitals as |dchs|}}
									{{#menu.option value=dchs
												onClick=(action (mut hospChooseHosp))}}
										{{dchs.hospitalConfig.hospital.name}}
									{{/menu.option}}
								{{/each}}
							{{/dd.menu}}
						{{/bp-dropdown}}
					{{/bp-layout}}
				{{else if (bp-eq salesGroupValue 0)}}
					{{#bp-layout main="between" cross="center"
							local-class="choose-area" 
							classNames="px-4"}}
						<span local-class="keys" class="mr-4">
							选择产品
						</span>
						{{#bp-dropdown widthSize="auto" local-class="dd-medicines dd-area" as |dd|}}
							{{#dd.button}}
								{{#if productChooseProduct.id}}
									<p>{{productChooseProduct.productConfig.product.name}}</p>
								{{else}}
									全部选择
								{{/if}}
								{{bp-icon icon='down'}}
							{{/dd.button}}
							{{#dd.menu as |menu|}}
								{{#menu.option value=''
									onClick=(action (mut productChooseProduct))}}
									全部选择
								{{/menu.option}}
								{{#each model.selfGoodsConfigs as |selfGoodsConfig|}}
									{{#menu.option value=selfGoodsConfig
												onClick=(action (mut productChooseProduct))}}
										{{selfGoodsConfig.productConfig.product.name}}
									{{/menu.option}}
								{{/each}}
							{{/dd.menu}}
						{{/bp-dropdown}}
					{{/bp-layout}}
					<div local-class="choose-area"></div>
				{{/if}}
			{{/bp-layout}}
			<div local-class="product-sales chart" class="mb-4 px-4 py-3 bg-white">
				{{bp-bar-line
					eid="chartbarLine"
					chartData=barLineData
				}}
			</div>
			{{#bp-layout tagName="h2" main='between' cross="center" local-class="title"
				 classNames="m-0 bg-white px-4"}}
				{{#each pageContent as |item index|}}
					{{#if (bp-eq index salesGroupValue)}}
						{{item}}销售数据表
					{{/if}}
				{{/each}}
				{{#bp-button}}导出数据{{/bp-button}}
			{{/bp-layout}}
			{{#bp-layout direction="col" local-class='table-area'}}
				<div class="table-responsive" local-class='table-content'>
					<table local-class="table-container" class="table">
						<thead>
							{{#each tableHead as |tcontent|}}
								<th class="text-center">{{tcontent}}</th>
							{{/each}}
						</thead>
						<tbody class="bg-white">
							{{#each tableBody as |tableTr|}}
								<tr>
									{{#each tableTr as |tableTd|}}
										<td>{{tableTd}}</td>
									{{/each}}
								</tr>
							{{/each}}
						</tbody>
					</table>
				</div>
			{{/bp-layout}}
		</div>
	{{/bp-layout}}
{{/bp-layout}}