{{#bp-layout local-class="overview" classNames="mb-4"}}
	{{#bp-layout direction="col" local-class="item" classNames="mr-2 bg-white"}}
		{{#bp-layout tagName="h2" cross="center" 
			local-class="title" classNames="px-4 pt-3"}}
			地区简介
		{{/bp-layout}}
		{{#bp-layout tagName="p" local-class="content"
			classNames="p-4"}}
			{{model.destConfigRegion.regionConfig.region.describe}}
		{{/bp-layout}}
	{{/bp-layout}}
	{{#bp-layout direction="col" local-class="item" classNames="bg-white"}}
		{{#bp-layout tagName="h2" cross="center"
			local-class="title"  classNames="px-4 pt-3"}}
			各市医院数分布
		{{/bp-layout}}
		{{#bp-layout local-class="content"
			classNames="p-4"}}
			<table class="table">
				<thead>
					<th>城市</th>
					<th>三级</th>
					<th>二级</th>
					<th>一级</th>
				</thead>
				<tbody>
					{{#each model.citiesHospital as |ch|}}
						<tr>
							<td>{{ch.name}}</td>
							<td>{{ch.third}}</td>
							<td>{{ch.second}}</td>
							<td>{{ch.first}}</td>
						</tr>
					{{/each}}
					<tr>
						<td>总计</td>
						<td>**</td>
						<td>*</td>
						<td>*</td>
					</tr>
					<tr></tr>
				</tbody>
			</table>
		{{/bp-layout}}
	{{/bp-layout}}
{{/bp-layout}}
{{#bp-layout local-class="cities-container"}}
	{{#bp-layout tagName="ul" direction="col" local-class="nav" 
				classNames="mr-4 p-4 bg-white"}}
		{{#each model.destConfigRegion.regionConfig.region.cities as |city index|}}
			{{#bp-layout tagName="li" cross="center" 
					local-class=(if (bp-eq salesGroupValue index) "active")
					classNames="px-4"}}
				<span {{action 'changeSalesValue' index}}>{{city.name}}</span>
			{{/bp-layout}}
		{{/each}}
	{{/bp-layout}}
	{{#bp-layout direction="col" local-class="content"}}
		{{#bp-layout direction="col" local-class="city-infos"}}
			{{#bp-layout direction='col' classNames='bg-white' class='mb-4'}}
				{{!-- {{#bp-layout tagName="h3" main="between" cross="center" 
					local-class="title" classNames="px-4 bg-white"}}
					<span local-class="main">{{tmpCityInfo.name}}*</span>
					<span local-class="desc">该城市共有医院 {{tmpCityInfo.destConfigs.length}}</span>
				{{/bp-layout}} --}}
				{{#bp-layout direction='row' main='between' cross='center' local-class="title"}}
					<h3 local-class='main' class="mx-4 mt-3">{{city.cityData.firstObject.name}}</h3>
				{{/bp-layout}}
				{{#bp-layout direction='row' main='between' cross='start'}}
					{{#bp-layout direction='col' main='center' classNames='m-4'}}
						<p local-class="sub-key">总医院数量</p>
						<p local-class='sub-value-num'>{{city.hospNum}}<span local-class='sub-num' class="ml-1">家</span></p>
					{{/bp-layout}}
					{{#bp-layout direction='col' main='center' classNames='m-4'}}
						<p local-class="sub-key">城市类型</p>
						<p local-class='sub-value'>{{city.cityData.firstObject.type}}</p>
					{{/bp-layout}}
					{{#bp-layout direction='col' main='center' classNames='m-4'}}
						<p local-class="sub-key">城市战略定位</p>
						<p local-class='sub-value'>{{city.cityData.firstObject.level}}</p>
					{{/bp-layout}}
					{{#bp-layout direction='col' main='center' classNames='m-4'}}
						<p local-class="sub-key">患者占比</p>
						{{#bp-layout direction='row' cross='center'}}
							{{#bp-layout direction='col' classNames='mr-4'}}
								<p local-class="sub-value" class="mb-1">{{city.cityData.firstObject.localPatientRatio}}</p>
								<p local-class='sub-num'>本地患者</p>
							{{/bp-layout}}
							{{#bp-layout direction='col'}}
								<p local-class="sub-value" class="mb-1">{{city.cityData.firstObject.nonlocalPatientRatio}}</p>
								<p local-class='sub-num'>外地患者</p>
							{{/bp-layout}}
						{{/bp-layout}}
					{{/bp-layout}}
				{{/bp-layout}}
			{{/bp-layout}}
			{{!-- {{#bp-layout classNames="mb-4 p-4 bg-white"}}
				{{#bp-layout direction="col"}}
					<p local-class="keys">城市类型</p>
					<p local-class="keys">城市战略定位</p>
					<p local-class="keys">治疗领域患者占比</p>
					<p local-class="keys">该城市下共有医院数量</p>
				{{/bp-layout}}
				{{#bp-layout direction="col"}}
					<p local-class="values" class="ml-3">地级市/非地级市</p>
					<p local-class="values" class="ml-3">核心城市/外围城市</p>
					<p local-class="values" class="ml-3">80%</p>
					<p local-class="values" class="ml-3">55133</p>
				{{/bp-layout}}
			{{/bp-layout}} --}}
		{{/bp-layout}}
		{{#each tmpCityInfo.destConfigs as |destConfig|}}
			{{hospital-info
					destConfig=destConfig 
					salesConfigs=model.salesConfigs}}
		{{/each}}
	{{/bp-layout}}
{{/bp-layout}}