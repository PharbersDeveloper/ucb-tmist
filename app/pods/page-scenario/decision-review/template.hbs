							{{/menu.option}}
							{{#each model.resourceConfigRepresentatives as |rcr|}}
								{{#menu.option value=rcr.representativeConfig.representative
												onClick=(action (mut tmpRep))}}
									{{rcr.representativeConfig.representative.name}}
								{{/menu.option}}
							{{/each}}
						{{/dd.menu}}
					{{/bp-dropdown}}
				{{/bp-layout}} --}}
			{{/bp-layout}}
