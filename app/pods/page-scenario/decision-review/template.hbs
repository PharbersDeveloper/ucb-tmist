								<p>{{tmpRep.name}}</p>
							{{else}}
								全部代表
							{{/if}}
							{{bp-icon icon='down'}}
						{{/dd.button}}
						{{#dd.menu as |menu|}}
							{{#menu.option value=''
								onClick=(action (mut tmpRep))}}
