{{#bp-layout direction="col" local-class="page-report" 
	classNames="p-4"}}
	{{#bp-page-header class="mb-4" local-class='report-header' as |ph|}}
		{{#ph.body as |body|}}
			{{#body.left as |left|}}
				{{#left.item}}
					测试综合表现
				{{/left.item}}
				{{#left.item}}
					日期：2019-04-10 17:00 用时：50min
					{{!-- {{model.scenario.name}} --}}
				{{/left.item}}
			{{/body.left}}
			{{#body.right}}
				{{#bp-button disabled=true class='mr-1'}}
					导出测试数据
				{{/bp-button}}
				{{#bp-button type='default' disabled=true }}
					返回报告
				{{/bp-button}}
			{{/body.right}}
		{{/ph.body}}
	{{/bp-page-header}}
	{{#bp-layout direction='col' class='bg-white p-4 mb-2' local-class='sum-up-performance'}}
		<h2 local-class="card-title" class='bg-white'>综合表现</h2>
		{{#bp-layout local-class='sum-up-content' cross='top'}}
			{{#bp-layout direction='col' cross='center' local-class='level' classNames='mr-4'}}
				<img src="" alt="" class="mb-4" local-class='level-img'>
				<p local-class="img-title">A级（优秀）</p>
			{{/bp-layout}}
			{{#bp-layout direction='col' class='pt-4' local-class='level-content'}}
				<p local-class='level-content-title' class="mb-3">等级评价</p>
				<p local-class='level-contetn-text'>您还需要花更多的精力，完善自己在报表与数据理解上的能力，透过科学化的分析，能使您在部署战略上，了解全局现状，洞察问题关键，预判发展趋势。从数据中你将收获宏观的视野，掌握全局。</p>
			{{/bp-layout}}
		{{/bp-layout}}
	{{/bp-layout}}
	{{#bp-layout direction='col' class='bg-white p-4 mb-2' local-class='result'}}
		<h2 local-class='result-title' class="mb-3">指标达成结果</h2>
		{{#bp-layout direction='row'  main='between' cross='center' local-class='result-list'}}
			<p local-class='result-sub-title'>总达成率</p>
			<p local-class='result-sub-title'>90%</p>
		{{/bp-layout}}
		{{#bp-layout direction='row' main='between' cross='center' local-class='result-list'}}
			<p local-class='result-list-text'>2019Q1</p>
			<p local-class='result-list-text'>90%</p>
		{{/bp-layout}}
		{{#bp-layout direction='row' main='between' cross='center' local-class='result-list'}}
			<p local-class='result-list-text'>2019Q1</p>
			<p local-class='result-list-text'>90%</p>
		{{/bp-layout}}
	{{/bp-layout}}
{{/bp-layout}}